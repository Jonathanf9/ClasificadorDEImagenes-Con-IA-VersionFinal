<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity"
    android:background="@drawable/baground">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Conexion">

        <TextView
            android:id="@+id/textViewPrediction"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:text="FUNCIONAMIENTO DEL APLICATIVO"
            android:textAlignment="center"
            android:textColor="@color/plomo"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Clasificador de imágenes con IA utilizando Tensoflow Lite"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageLoked"
            android:layout_width="391dp"
            android:layout_height="284dp"
            android:layout_gravity="center"
            android:src="@drawable/descarga" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="DESCRIPCIÓN"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/plomo"
            android:textSize="26dp"

            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="El aplicativo creado nos permitirá demostrar lo fácil de incorporar Tensoflow Lite mediante Teachine Machine usando INTELIGENCIA ARTIFICIAL (Máquina de enseñanza) cómo lo es la clasificacíón de imágenes el cuál nos permitirá identificar equipos de computación , tecnológicos  cómo sus componentes internos y externos en los cuáles se agregó en la máquina de enseñanza."
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>